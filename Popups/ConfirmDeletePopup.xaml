<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="CritterCare.ConfirmDeletePopup"
    Color="Gray">

    <Grid VerticalOptions="Center" HorizontalOptions="Center" Padding="20" BackgroundColor="White">
        <VerticalStackLayout Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="Are you sure you want to delete?"
                   FontSize="16"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="Black"/>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Button Text="Yes"
                        Clicked="OnYesClicked"
                        BackgroundColor="Green"
                        TextColor="White"/>
                <Button Text="No"
                        Clicked="OnNoClicked"
                        BackgroundColor="Red"
                        TextColor="White"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>

</toolkit:Popup>
