<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CritterCare.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Welcome to Critter Care!"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="{DynamicResource TextColor}"
                   HorizontalOptions="Center" />

            <Button Text="Add Pet"
                    Clicked="OpenAddPetPopup"
                    BackgroundColor="{DynamicResource ButtonColor2}"
                    TextColor="{DynamicResource TextColor}"
                    Padding="10"
                    HorizontalOptions="Center"/>

            <Label Text="Your Pets:"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="{DynamicResource TextColor}"
                   Margin="0,10,0,5" />

            <!-- CollectionView -->
            <CollectionView x:Name="PetListView" SelectionMode="Single" SelectionChanged="OnPetSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BorderColor="{DynamicResource TextColor}" BackgroundColor="{DynamicResource ButtonColor}">
                            <StackLayout>
                                <!-- Make the image circular by setting CornerRadius on the Frame wrapping it -->
                                <Frame Padding="0" BorderColor="Transparent" BackgroundColor="Transparent" CornerRadius="50" HeightRequest="100" WidthRequest="100">
                                    <Image Source="{Binding ImageSource}"
                                           HeightRequest="100" 
                                           WidthRequest="100" 
                                           Aspect="AspectFill"/>
                                </Frame>
                                <Label Text="{Binding Name}" FontSize="16" TextColor="{DynamicResource TextColor}" />

                                <!-- Delete Button -->
                                <Button Text="Delete"
                                        BackgroundColor="Red"
                                        TextColor="White"
                                        Clicked="OnDeletePetClicked"
                                        CommandParameter="{Binding .}" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
