<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CritterCare.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Welcome to Critter Care!"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="{DynamicResource TextColor}"
                   HorizontalOptions="Center" />

            <Button Text="Add Pet"
                Clicked="OpenAddPetPopup"
                BackgroundColor="#2196F3"
                TextColor="{DynamicResource TextColor}"
                Padding="10"
                HorizontalOptions="Center"/>

                <Label Text="Your Pets:"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="{DynamicResource TextColor}"
                   Margin="0,10,0,5" />

                <CollectionView x:Name="PetListView" SelectionMode="Single" SelectionChanged="OnPetSelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="10" Margin="5" BorderColor="{DynamicResource TextColor}" BackgroundColor="{DynamicResource PageBackgroundColor}">
                                <Label Text="{Binding Name}" FontSize="16" TextColor="{DynamicResource TextColor}"/>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

