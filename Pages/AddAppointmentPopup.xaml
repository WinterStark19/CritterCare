<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                x:Class="CritterCare.AddAppointmentPopup">

	<VerticalStackLayout Padding="20" BackgroundColor="White" Spacing="15">

		<!-- Title -->
		<Label Text="Title" />
		<Entry x:Name="TitleEntry" Placeholder="Appointment Title" />

		<!-- Date -->
		<Label Text="Date" />
		<DatePicker x:Name="DatePicker" />

		<!-- Notes -->
		<Label Text="Notes" />
		<Editor x:Name="NotesEditor" Placeholder="Appointment Notes" />

		<!-- Buttons -->
		<HorizontalStackLayout HorizontalOptions="Center" Spacing="20" Padding="10">
			<Button Text="Save" Clicked="SaveAppointment" BackgroundColor="LightGreen"/>
			<Button Text="Cancel" Clicked="ClosePopup" BackgroundColor="LightCoral"/>
		</HorizontalStackLayout>

	</VerticalStackLayout>
</toolkit:Popup>
