<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CritterCare.SettingsPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <VerticalStackLayout Padding="20">
        <Label Text="Settings" FontSize="24" HorizontalOptions="Center" />

        <!-- Toggle for Dark Mode -->
        <Switch x:Name="DarkModeSwitch" IsToggled="{Binding IsDarkMode}" />
        <Label Text="Enable Dark Mode" HorizontalOptions="Start" />

        <!-- Save Button -->
        <Button Text="Save Settings" Clicked="OnSaveSettingsClicked" />
    </VerticalStackLayout>
</ContentPage>
