<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CritterCare.MedicationsPage"
             Title="Medications">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Medications" FontAttributes="Bold" FontSize="18"/>

        <ListView x:Name="MedicationListView" HeightRequest="150">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Dosage}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Add Medication" Clicked="OnAddMedicationClicked"/>
    </VerticalStackLayout>
</ContentPage>
