<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="CritterCare.PetDetailsPopup">

    <VerticalStackLayout Padding="20" Spacing="15">
        <!-- Pet Details -->
        <Label x:Name="PetNameLabel" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
        <Label x:Name="PetSpeciesLabel" FontSize="16" HorizontalOptions="Center"/>
        <Label x:Name="PetBreedLabel" FontSize="16" HorizontalOptions="Center"/>

        <!-- Edit and Close Buttons -->
        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
            <Button Text="Edit" Clicked="EditPet" BackgroundColor="LightBlue"/>
            <Button Text="Close" Clicked="ClosePopup" BackgroundColor="LightCoral"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>