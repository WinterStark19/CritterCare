<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                x:Class="CritterCare.PetDetailsPopup">

    <VerticalStackLayout Padding="20" BackgroundColor="White" Spacing="15">

        <!-- Name -->
        <Label Text="Name" />
        <Entry x:Name="PetNameEntry" IsReadOnly="True" Placeholder="Pet Name" />

        <!-- Species & Breed -->
        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
            <VerticalStackLayout Grid.Column="0">
                <Label Text="Species" />
                <Entry x:Name="PetSpeciesEntry" IsReadOnly="True" Placeholder="Species" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1">
                <Label Text="Breed" />
                <Entry x:Name="PetBreedEntry" IsReadOnly="True" Placeholder="Breed" />
            </VerticalStackLayout>
        </Grid>

        <!-- Birthdate & Age -->
        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
            <VerticalStackLayout Grid.Column="0">
                <Label Text="Birth Date" />
                <DatePicker x:Name="PetBirthDatePicker" IsEnabled="False"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1" x:Name="AgeCard">
                <Label Text="Age" />
                <Entry x:Name="AgeEntry" IsReadOnly="True" />
            </VerticalStackLayout>
        </Grid>

        <!-- Weight -->
        <Label Text="Weight (lbs)" />
        <Entry x:Name="PetWeightEntry" IsReadOnly="True" Placeholder="Weight" Keyboard="Numeric"/>

        <!-- Buttons -->
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="20" Padding="10">
            <Button Text="Edit" Clicked="EditPet" BackgroundColor="LightBlue"/>
            <Button x:Name="SaveButton" Text="Save" Clicked="SavePet" BackgroundColor="LightGreen" IsVisible="False"/>
            <Button Text="Close" Clicked="ClosePopup" BackgroundColor="LightCoral"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</toolkit:Popup>

