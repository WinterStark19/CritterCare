<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CritterCare.MedicationsPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

	<ScrollView>
		<VerticalStackLayout Padding="20" Spacing="15">
			<Label Text="Your Pet's Medications"
                   FontSize="24"
                   HorizontalOptions="Center"
                   TextColor="{DynamicResource TextColor}" />

			<ListView x:Name="MedicationListView" HeightRequest="200"
                      BackgroundColor="{DynamicResource PageBackgroundColor}">
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>
							<Frame Padding="10" Margin="5" CornerRadius="10" BackgroundColor="{DynamicResource CardBackgroundColor}">
								<VerticalStackLayout>
									<StackLayout Orientation="Horizontal">
										<Label Text="Name:  " FontAttributes="Bold" TextColor="{DynamicResource TextColor}"/>
										<Label Text=" {Binding Name}" TextColor="{DynamicResource TextColor}"/>
									</StackLayout>
									<StackLayout Orientation="Horizontal">
										<Label Text="Dosage:  " FontAttributes="Bold" TextColor="{DynamicResource TextColor}"/>
										<Label Text=" {Binding Dosage}" TextColor="{DynamicResource TextColor}"/>
									</StackLayout>
									<StackLayout Orientation="Horizontal">
										<Label Text="Frequency:  " FontAttributes="Bold" TextColor="{DynamicResource TextColor}"/>
										<Label Text=" {Binding Frequency}" TextColor="{DynamicResource TextColor}"/>
									</StackLayout>
								</VerticalStackLayout>
							</Frame>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>

			<Button Text="Add Medication"
                    Clicked="OnAddMedicationClicked"
                    BackgroundColor="{DynamicResource ButtonBackgroundColor}"
                    TextColor="{DynamicResource ButtonTextColor}"/>
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>