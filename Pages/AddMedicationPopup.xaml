<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                x:Class="CritterCare.AddMedicationPopup">

    <VerticalStackLayout Padding="20" BackgroundColor="White" Spacing="15">

        <!-- Name -->
        <Label Text="Medication Name" />
        <Entry x:Name="MedicationNameEntry" Placeholder="Medication Name" />

        <!-- Dosage -->
        <Label Text="Dosage" />
        <Entry x:Name="MedicationDosageEntry" Placeholder="Dosage" Keyboard="Numeric"/>

        <!-- Frequency -->
        <Label Text="Frequency" />
        <Entry x:Name="MedicationFrequencyEntry" Placeholder="Frequency" />

        <!-- Buttons -->
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="20" Padding="10">
            <Button Text="Save" Clicked="SaveMedication" BackgroundColor="LightGreen"/>
            <Button Text="Cancel" Clicked="ClosePopup" BackgroundColor="LightCoral"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</toolkit:Popup>
